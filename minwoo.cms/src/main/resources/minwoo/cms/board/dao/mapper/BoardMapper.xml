<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="minwoo.cms.board.dao.mapper.BoardMapper">

   <!-- 01. 게시글 전체 목록 조회 -->
   <select id="getBoardLists" resultType="minwoo.cms.board.domain.BoardVo">
      select usb_id, usb_title,usb_content, usb_cnt, sub_id, reg_date,user_id
      from USERBOARDS
   </select>
   
   <!-- 02. 게시글 작성 추가 -->
   <insert id="addBoard" parameterType="minwoo.cms.board.domain.BoardVo">
         insert into boards(usb_id,usb_title,usb_content,sub_id,reg_data,usb_cnt)
         values(boards_usbid_seq.nextval,#{usbId}#{usbTitle},#{usbContent},#{subId},#{regDate},#{usbCnt})
   </insert>
   
</mapper>